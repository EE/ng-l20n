{
    "env": {
        "es6": false,
        "browser": true,
        "node": false
    },

    "rules": {
        // Strict mode
        "strict": [2, "function"], // "global" in Node, "function" in a browser

        // ECMAScript 6
        "no-var": 0,
        "object-shorthand": 0,
        "prefer-arrow-callback": 0,
        "prefer-const": 0,
        "prefer-spread": 0,
        "prefer-reflect": 0,
        "prefer-template": 0
    },

    "globals": {
        "angular": false
    }
}
